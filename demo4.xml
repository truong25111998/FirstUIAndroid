<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/i1"
    android:layout_width="match_parent"
    android:src="@drawable/demo_gradient_3"
    android:layout_height="365dp"/>
    <ImageView
        android:id="@+id/i2"
        android:layout_below="@id/i1"
        android:layout_width="match_parent"
        android:src="@drawable/demo_gradient_4"
        android:layout_height="380dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:background="@drawable/g3"
        android:layout_below="@id/i1"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="150dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:src="@drawable/g"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_height="200dp"/>
    <Button
        android:id="@+id/b1"
        android:layout_width="190dp"
        android:text="FOLLOW"
        android:textSize="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/demo_shape_2"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_below="@id/b1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:text="FILMOGAPHY"
        android:textSize="25dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="wrap_content"
        android:text="George A. Romero"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/b1"
        android:layout_marginTop="-180dp"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="wrap_content"
        android:text="GodFather of the Dead"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/b1"
        android:layout_marginTop="-130dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:textStyle="italic"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/e1"
        android:layout_below="@id/b1"
        android:layout_width="60dp"
        android:text="20"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_toLeftOf="@id/b1"
        android:layout_centerHorizontal="true"
        android:layout_height="60dp"/>
    <EditText
        android:layout_below="@id/b1"
        android:layout_width="100dp"
        android:text="Movies"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        android:layout_alignLeft="@id/e1"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="-10dp"
        android:gravity="bottom"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"/>
    <EditText
        android:id="@+id/e3"
        android:layout_below="@id/b1"
        android:layout_width="60dp"
        android:text="15"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_height="60dp"/>
    <EditText
        android:layout_below="@id/b1"
        android:layout_width="100dp"
        android:text="Arwads"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        android:layout_alignLeft="@id/e3"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="-10dp"
        android:gravity="bottom"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"/>
    <EditText
        android:id="@+id/e4"
        android:layout_below="@id/b1"
        android:layout_width="90dp"
        android:text="1.5 m"
        android:textSize="30dp"
        android:layout_toRightOf="@id/b1"
        android:layout_marginTop="-14dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_height="80dp"/>
    <EditText
        android:layout_below="@id/b1"
        android:layout_width="100dp"
        android:text="Follower"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        android:layout_alignLeft="@id/e4"
        android:layout_marginTop="-10dp"
        android:gravity="bottom"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"/>

</RelativeLayout>